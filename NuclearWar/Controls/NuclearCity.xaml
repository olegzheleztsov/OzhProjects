<UserControl x:Class="NuclearWar.Controls.NuclearCity"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NuclearWar.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             x:Name="city">
    
    <Button Style="{StaticResource NuclearCityButtonStyleKey}" 
            Width="{Binding Width, ElementName=city}" 
            Height="{Binding Height, ElementName=city}"
            Background="{Binding CityBackground, ElementName=city}">
        
    </Button>
</UserControl>
