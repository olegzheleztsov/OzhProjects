<Window x:Class="NuclearWar.Farm.HtmlAgilityPackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NuclearWar.Farm"
        mc:Ignorable="d"
        Title="Web Scraping Samples" Height="597" Width="447" Loaded="Window_Loaded">
    <Grid Style="{x:Null}">
        <Grid.RowDefinitions>
            <RowDefinition  Height="*"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <ScrollViewer>
            <TextBlock x:Name="outputText" Grid.Row="0" Margin="8" Padding="8" Foreground="Black"/>
        </ScrollViewer>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="8">
            <Button Padding="8" MinHeight="30" MinWidth="120" x:Name="btnGetCapitals"
                    Click="btnGetCapitals_Click">Get Capitals</Button>
        </StackPanel>
    </Grid>
</Window>
